{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-hpp.org/schemas/risk-assessment.schema.json",
  "title": "Risk Assessment",
  "type": "object",
  "required": [
    "assessment_id",
    "context",
    "threats",
    "risk_score",
    "response_level"
  ],
  "properties": {
    "assessment_id": {
      "type": "string",
      "description": "Assessment id."
    },
    "context": {
      "type": "string",
      "description": "Context."
    },
    "threats": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "class",
          "likelihood",
          "impact"
        ],
        "properties": {
          "class": {
            "type": "string",
            "description": "Class."
          },
          "likelihood": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Likelihood."
          },
          "impact": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Impact."
          },
          "controls": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "Items."
            },
            "description": "Controls."
          }
        },
        "additionalProperties": false,
        "description": "Items."
      },
      "description": "Threats."
    },
    "risk_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Risk score."
    },
    "response_level": {
      "type": "string",
      "enum": [
        "monitor",
        "restrict",
        "degrade",
        "halt"
      ],
      "description": "Response level."
    },
    "review_required": {
      "type": "boolean",
      "default": true,
      "description": "Review required."
    }
  },
  "additionalProperties": false,
  "description": "Risk Assessment for AI-HPP artifacts."
}