{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-hpp.org/schemas/agent-governance.schema.json",
  "title": "Agent Governance Policy",
  "type": "object",
  "required": [
    "policy_id",
    "autonomy_scope",
    "human_oversight",
    "refusal_boundaries",
    "tool_execution_boundary"
  ],
  "properties": {
    "policy_id": {
      "type": "string",
      "description": "Policy id."
    },
    "autonomy_scope": {
      "type": "string",
      "enum": [
        "advisory",
        "bounded_execution",
        "high_risk_assist"
      ],
      "description": "Autonomy scope."
    },
    "human_oversight": {
      "type": "object",
      "required": [
        "hitl_required",
        "approval_threshold"
      ],
      "properties": {
        "hitl_required": {
          "type": "boolean",
          "description": "Hitl required."
        },
        "approval_threshold": {
          "type": "string",
          "enum": [
            "all_high_risk",
            "critical_only",
            "custom"
          ],
          "description": "Approval threshold."
        }
      },
      "additionalProperties": false,
      "description": "Human oversight."
    },
    "refusal_boundaries": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Items."
      },
      "description": "Refusal boundaries."
    },
    "tool_execution_boundary": {
      "type": "object",
      "required": [
        "allowlist",
        "deny_by_default"
      ],
      "properties": {
        "allowlist": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Items."
          },
          "description": "Allowlist."
        },
        "deny_by_default": {
          "type": "boolean",
          "description": "Deny by default."
        }
      },
      "additionalProperties": false,
      "description": "Tool execution boundary."
    }
  },
  "additionalProperties": false,
  "description": "Agent Governance Policy for AI-HPP artifacts."
}